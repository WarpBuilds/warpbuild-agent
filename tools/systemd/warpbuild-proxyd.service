[Unit]
Description=Systemd service to manage warpbuild-proxy lifecycle
After=network.target

[Service]
ExecStart=/usr/local/bin/warpbuild-agentd --launch-proxy-server
WorkingDirectory=/
Restart=always
RestartSec=5
Environment=WARPBUILD_RUNNER_VERIFICATION_TOKEN=$WARPBUILD_RUNNER_VERIFICATION_TOKEN
Environment=WARPBUILD_CACHE_URL=$WARPBUILD_CACHE_URL

[Install]
WantedBy=multi-user.target
