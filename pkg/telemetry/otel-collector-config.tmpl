receivers:
{{- if eq .OS "windows"}}
  # Windows Event Log receiver
  windowseventlog/system:
    channel: system
{{- else}}
  filelog:
    include: ['{{.SyslogFilePath}}']
    start_at: 'end'
    max_log_size: 200KiB
    include_file_name: false
    include_file_path: false
    poll_interval: 20s
{{- end}}

  hostmetrics:
    collection_interval: 20s
    scrapers:
      memory:
      filesystem:
        metrics:
          system.filesystem.inodes.usage:
            enabled: false
      load:
        metrics:
          system.cpu.load_average.1m:
            enabled: false
          system.cpu.load_average.5m:
            enabled: false

processors:
  batch:
    timeout: {{.PushFrequency}}
    send_batch_size: 1000

exporters:
  console:                              # ‚Üê print logs to stdout (needed for debug)
    pretty_print: true
  file:
    path: '{{.ExportFilePath}}'
    format: json
    append: false
    rotation:
      max_megabytes: 1
      max_backups: 1

service:
  pipelines:
    logs:
      receivers: [{{- if eq .OS "windows"}}windowseventlog/system{{- else}}filelog{{- end}}]
      processors: [batch]
      exporters: [file, console]
    metrics:
      receivers: [hostmetrics]
      processors: [batch]
      exporters: [file]
  telemetry:
    metrics:
      level: none
    logs:
      level: DEBUG